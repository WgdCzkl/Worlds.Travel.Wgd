
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<form id="form-login" class="p-t-15" action="@Url.Action("Login", "Account")" , method="POST">
    <div class="form-group form-group-default">
        <label>帐号</label>
        <div class="controls">
            <input type="text" name="UserName" placeholder="请输入账号" class="form-control" required>
        </div>
    </div>
    <div class="form-group form-group-default">
        <label>密码</label>
        <div class="controls">
            <input type="Password" class="form-control" name="password" placeholder="请输入密码" required>
        </div>
    </div>
    <button class="btn btn-primary btn-cons m-t-10" type="submit">登录</button>
</form>